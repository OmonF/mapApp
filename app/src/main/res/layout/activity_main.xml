<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ecf0f1"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/white"
    android:layout_width="390dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    >

    <TextView
        android:id="@+id/textUzb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Узбекистон Овози, 2"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ташкент, Узбекистан"
        android:id="@+id/textTash"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        ></TextView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="335dp"
        ></ImageView>

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewss"
        app:cardBackgroundColor="@color/white"
        android:layout_width="390dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        >

        <TextView
            android:id="@+id/textUzbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:text="Государственный Музей Искувств Узбекистана"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ташкент, Узбекистан"
            android:id="@+id/textTashs"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            ></TextView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_location"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="335dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:id="@+id/textwithnumber"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="20dp"
            ></TextView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/starspng"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="50dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Открыто до 17:00"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            ></TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewsss"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дом"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Узбекистан, Ташкент, Ц квартал, 2 подьезд"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            ></TextView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_location"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="335dp"
            ></ImageView>

    </androidx.cardview.widget.CardView>






    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/radiusss"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>